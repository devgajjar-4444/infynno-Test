              "raw": "{{base_url}}/api/emails/retry/{{email_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "emails", "retry", "{{email_id}}"]
            }
          }
        },
        {
          "name": "Clear Email Queue",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/emails/queue",
              "host": ["{{base_url}}"],
              "path": ["api", "emails", "queue"]
            }
          }
        },
        {
          "name": "Send Manual Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"emailType\": \"welcome\",\n  \"recipientId\": \"{{user_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/emails/process-manual",
              "host": ["{{base_url}}"],
              "path": ["api", "emails", "process-manual"]
            }
          }
        }
      ]
    },
