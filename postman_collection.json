              "raw": "{\n  \"role\": \"manager\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/users/{{user_id}}/role",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "users", "{{user_id}}", "role"]
